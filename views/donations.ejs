  <div class="container">
    <h1 style="text-transform:uppercase; font-size: 35px; text-align:center">WE NEED YOUR HELP TO HELP OTHERS</h1>
    <div class="container">
      <div class="row">
        <div class="col-lg-12 ">
          <nav>
            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
              <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#donateMoney" role="tab"
                aria-controls="nav-home" aria-selected="true">Donate Money</a>
              <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#donateClothes" role="tab"
                aria-controls="nav-profile" aria-selected="false">Donate Clothes</a>
            </div>
          </nav>

          <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <div class="tab-pane fade show active" id="donateMoney" role="tabpanel" aria-labelledby="nav-home-tab">

              <center>
                <h3>Donate Money</h3>
              </center>

              <!-- Money Doante Form -->
              <form action="/donateMoney" method="post">
                <div class="container pt-5">
                  <label style=" font-size: 20px;" for="amount" class="font-weight-bold ml-3">Amount:</label>
                  <div style="margin-left: 5em;" class="d-inline-flex col-6">
                    <input type="text" name="amount" class="form-control" placeholder="Enter the Amount to donate"
                      required>
                  </div>
                  <br>
                  <div class="my-4">
                    <textarea class="form-control" name="message" placeholder="Message" cols="8" , rows="8"></textarea>
                  </div>
                  <center><button type="submit" class="btn btn-danger p-md-3">DONATE NOW</button></center>
                </div>
              </form>
            </div>


            <div class="tab-pane fade" id="donateClothes" role="tabpanel" aria-labelledby="nav-profile-tab">
              <center>
                <h3>Donate Clothes</h3>
              </center>

              <!-- Cloth Donate Form -->
              <form action="donateClothes" method="post">
                <div class="container pt-5">
                  <label style=" font-size: 20px;" for="amount" class="font-weight-bold ml-3">Cloth Type:</label>
                  <div style="margin-left: 5em;" class="d-inline-flex col-6">
                    <input type="text" name="cloth_type" class="form-control"
                      placeholder="Eg:Shirts, Pants, Dresses etc." required>
                  </div>
                  <br>
                  <label style=" font-size: 20px;" for="amount" class="font-weight-bold ml-3">Cloth Gender:</label>
                  <div style="margin-left: 5em;" class="d-inline-flex col-6">
                    <div class="radio">
                      <input type="radio" id="male" value="male" name="cloth_gender" required>
                      <label for="male">Male</label>
                      <input type="radio" id="female" value="female" name="cloth_gender" required>
                      <label for="female">Female</label>
                      <input type="radio" id="both" value="both" name="cloth_gender" required>
                      <label for="others">Both</label>
                    </div>
                  </div>
                  <br>
                  <div class="my-4">
                    <textarea class="form-control" name="message" placeholder="Message" cols="8" , rows="8"></textarea>
                  </div>
                  <center><button type="submit" class="btn btn-danger p-md-3">DONATE NOW</button></center>
                </div>
              </form>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="pb-5"></div>
  </div>



  <div class="pb-5"></div>
  </div>
  <%- include ('./partials/footer') -%>
