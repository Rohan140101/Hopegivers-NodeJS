<!DOCTYPE html>
<html>

<head>
	<title>HopeGivers</title>
	<link rel="stylesheet" type="text/css" href="css/register.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css">
</head>

<body>

	<!-- multistep form -->
	<form action="/home" method="GET" id="multistepsform" autocomplete="off">
		<p style="margin-top: 150px;"></p>
		<!-- fieldsets -->
		<fieldset>
			<p>Please Check the mail which has been sent to your account</p>
			<input type="submit" name="submit" class="submit action-button" value="Return Home" />
			<h3 class="fs-subtitle"></h3>
		</fieldset>
	</form>

	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

	<script>

		let password;

		$('.toggle-password').on('click', function (e) {
			password = document.getElementById("password");
			if (password.type === 'password') {
				console.log('Password type is text');
				password.type = 'text';
				$('#hide-password').hide();
				$('#show-password').show();
			}
			else {
				password.type = 'password';
				$('#hide-password').show();
				$('#show-password').hide();
			}
		});



	</script>
</body>

</html>